    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "reviews": {
      "via": "product",
      "collection": "review"
    },
    "rating": {
      "type": "decimal",
      "max": 5,
      "min": 1
    },
    "noofreviews": {
      "type": "integer"
    },
    "products": {
      "collection": "product"
    }
  }
